@model QuestBoard.Models.Game
@{
    ViewData["Title"] = "Create Game";
    Layout = null;
}
<h1>Create Game</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre"></span>
    </div>
    <div>
        <label asp-for="CreatedAt"></label>
        <input asp-for="CreatedAt" type="datetime-local" class="form-control" />
        <span asp-validation-for="CreatedAt"></span>
    </div>
    <button type="submit">Save</button>
    <a asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
