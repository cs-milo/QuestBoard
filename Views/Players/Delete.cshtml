@model QuestBoard.Models.Player

<h2>Delete Player</h2>
<h3>Are you sure you want to delete this player?</h3>
<hr />

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Class</dt>
        <dd class="col-sm-10">@Model.Class</dd>

        <dt class="col-sm-2">Level</dt>
        <dd class="col-sm-10">@Model.Level</dd>

        <dt class="col-sm-2">Game</dt>
        <dd class="col-sm-10">@Model.Game?.Name</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
