@model QuestBoard.ViewModels.QuestDetailsViewModel
@{
    ViewData["Title"] = "Quest Details";
}
<h1>Quest Details</h1>

<dl class="row">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Game</dt>
    <dd class="col-sm-9">@Model.GameTitle</dd>

    <dt class="col-sm-3">Player</dt>
    <dd class="col-sm-9">@Model.PlayerName</dd>

    <dt class="col-sm-3">Due (UTC)</dt>
    <dd class="col-sm-9">@Model.DueDateUtc?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-3">Completed</dt>
    <dd class="col-sm-9">@((Model.IsCompleted) ? "Yes" : "No")</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>
