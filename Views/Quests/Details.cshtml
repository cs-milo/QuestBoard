@model QuestBoard.Models.Quest

<h2>Quest Details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Difficulty</dt>
    <dd class="col-sm-10">@Model.Difficulty</dd>

    <dt class="col-sm-2">Reward</dt>
    <dd class="col-sm-10">@Model.RewardGold gold</dd>

    <dt class="col-sm-2">Game</dt>
    <dd class="col-sm-10">@Model.Game?.Name</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
