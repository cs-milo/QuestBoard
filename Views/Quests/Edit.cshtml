@model QuestBoard.Models.Quest

@{
    ViewData["Title"] = "Edit Quest";
}

<h2>Edit Quest</h2>
<hr />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RewardGold" class="control-label"></label>
        <input asp-for="RewardGold" class="form-control" type="number" />
        <span asp-validation-for="RewardGold" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Difficulty" class="control-label"></label>
        <input asp-for="Difficulty" class="form-control" />
        <span asp-validation-for="Difficulty" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GameId" class="control-label">Game</label>
        <select asp-for="GameId" asp-items="@(ViewData["GameId"] as SelectList)" class="form-control"></select>
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
